// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AnalysisStatus {
  PENDING
  SCANNING
  COMPLETED
  FAILED
}

enum VerdictLabel {
  LEGITIMO
  SPAM
  MALWARE
}

enum FileScanStatus {
  PENDING
  SCANNING
  COMPLETED
  FAILED
}

enum GroqModel {
  LLAMA_70B
  LLAMA_8B
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  settings  UserSettings?
  analyses  Analysis[]
}

model UserSettings {
  id              String    @id @default(cuid())
  userId          String    @unique
  username        String
  groqModel       GroqModel @default(LLAMA_70B)

  // ✅ mantém string para não dar dor em migration
  // valores esperados: "virustotal" | "metadefender"
  malwareProvider String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Analysis {
  id     String         @id @default(cuid())
  userId String
  status AnalysisStatus @default(PENDING)

  // input do email (persistente)
  emailTitle   String
  emailSubject String
  emailBody    String

  // output do perceptron (persistente)
  perceptronLabel    VerdictLabel?
  perceptronScore    Int?
  perceptronEvidence Json?

  // ✅ agregado malware (para combinar no veredito final)
  malwareProvider String? // "virustotal" | "metadefender"
  malwareScore    Int?
  malwareEvidence Json?
  malwareReport   Json?

  // veredito final
  finalLabel VerdictLabel?
  finalScore Int?

  // resposta final “humana”
  aiResponse String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  completedAt DateTime?

  user  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  files AnalysisFile[]

  @@index([userId, createdAt])
  @@index([status])
}

model AnalysisFile {
  id         String         @id @default(cuid())
  analysisId String

  filename  String
  mimeType  String
  sizeBytes Int
  sha256    String

  // bytea
  content   Bytes

  scanStatus FileScanStatus @default(PENDING)

  scanProvider String? // "virustotal" | "metadefender"
  scanScore    Int?
  scanEvidence Json?
  scanReport   Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  analysis Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)

  @@index([analysisId])
  @@index([sha256])
  @@index([scanStatus])
}
