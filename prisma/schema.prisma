// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AnalysisStatus {
  PENDING
  SCANNING
  COMPLETED
  FAILED
}

enum VerdictLabel {
  LEGITIMO
  SPAM
  MALWARE
}

enum FileScanStatus {
  PENDING
  SCANNING
  COMPLETED
  FAILED
}

enum GroqModel {
  LLAMA_70B
  LLAMA_8B
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  settings  UserSettings?
  analyses  Analysis[]
}


model UserSettings {
  id              String    @id @default(cuid())
  userId          String    @unique
  username        String
  groqModel       GroqModel @default(LLAMA_70B)
  malwareProvider String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Analysis {
  id     String        @id @default(cuid())
  userId String
  status AnalysisStatus @default(PENDING)

  // input do email (persistente porque precisas ver no histórico)
  emailTitle   String
  emailSubject String
  emailBody    String

  // output do perceptron (persistente)
  perceptronLabel    VerdictLabel?
  perceptronScore    Int?
  perceptronEvidence Json?

  // veredito final (combinação perceptron + malware scan)
  finalLabel VerdictLabel?
  finalScore Int?

  // resposta final “humana” (streaming guardado no fim)
  aiResponse String?

  createdAt   DateTime  @default(now())
  completedAt DateTime?

  user  User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  files AnalysisFile[]

  @@index([userId, createdAt])
}

model AnalysisFile {
  id         String         @id @default(cuid())
  analysisId String

  filename  String
  mimeType  String
  sizeBytes Int
  sha256    String

  // Bytes: no Postgres isto é bytea
  content   Bytes

  scanStatus FileScanStatus @default(PENDING)
  scanResult Json?

  createdAt DateTime @default(now())

  analysis Analysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)

  @@index([analysisId])
  @@index([sha256])
}
